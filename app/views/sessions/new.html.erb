
<h1>Please log in to continue.</h1>

<%- if flash[:error] %>
  <h2><%= flash[:error] %></h2>
<% elsif flash[:success] %>
  <h2><%= flash[:success] %></h2>
<% end %>

<%= form_for :session, url: sessions_path do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email, class: '', placeholder: 'Email' %>


    <%= f.label :password %>
    <%= f.password_field :password, class: '', placeholder: 'Password' %>


    <%= f.submit 'Log In', class: '' %>

<% end %>


  New User? <%= link_to 'Click here to create an account.', users_new_path %>
